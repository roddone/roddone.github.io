<!DOCTYPE html>
<html lang="fr">

<head>

	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script src="https://www.googletagmanager.com/gtag/js?id=UA-139506649-1" async></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag() { dataLayer.push(arguments); }
		gtag('js', new Date());

		gtag('config', 'UA-139506649-1');
	</script>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="{{head.metaDescription}}">
	<meta name="author" content="Romain ODDONE">

	<title>{{head.title}}</title>

	<!-- Custom fonts for this template -->
	<link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet">

	<!-- Custom styles for this template -->
	<link href="bundle.css" rel="stylesheet">

	<meta name="theme-color" content="#17a2b8">
</head>

<body id="page-top">

	<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top d-print-none" id="sideNav">
		<a class="text-white" href="{{navbar.otherLinkUrl}}">{{navbar.otherLinkText}}</a>
		<a class="navbar-brand js-scroll-trigger" href="#page-top">
			<span class="d-block d-lg-none">Romain Oddone</span>
			<span class="d-none d-lg-block">
				<img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="img/profile.jfif"
					alt="Romain ODDONE">
			</span>
		</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
			aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link js-scroll-trigger" href="#about">{{navbar.about}}</a>
				</li>
				<li class="nav-item">
					<a class="nav-link js-scroll-trigger" href="#experience">{{navbar.experience}}</a>
				</li>
				<li class="nav-item">
					<a class="nav-link js-scroll-trigger" href="#education">{{navbar.education}}</a>
				</li>
				<li class="nav-item">
					<a class="nav-link js-scroll-trigger" href="#skills">{{navbar.skills}}</a>
				</li>
				<li class="nav-item">
					<a class="nav-link js-scroll-trigger" href="#interests">{{navbar.interests}}</a>
				</li>
				<li class="nav-item">
					<a class="nav-link js-scroll-trigger" href="#diy">{{navbar.diy}}</a>
				</li>
			</ul>
		</div>
	</nav>

	<div class="container-fluid p-0">

		<section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="about">
			<div class="w-100">
				<h1 class="mb-0">
					<span class="d-none d-print-inline">
						<img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="img/profile.jfif"
							alt="Romain ODDONE">
					</span>
					<span>Romain</span>
					<span class="text-primary">Oddone</span>
				</h1>
				<div class="subheading mb-5">Lille, France
					<a href="mailto:romain.oddone@outlook.com">romain.oddone@outlook.com</a>
				</div>

				<p class="lead mb-5">
					{{{about.description}}}
				</p>
				<div class="social-icons">
					<a href="https://www.linkedin.com/in/romain-oddone/" class="d-print-block" aria-label="Linkedin"
						title="Linkedin">
						<i class="fab fa-linkedin-in"></i>
						<span
							class="d-none d-print-inline text-black-50 ml-4 position-absolute">https://www.linkedin.com/in/romain-oddone/</span>
					</a>
					<a href="https://github.com/roddone" class="d-print-block" aria-label="Github" title="Github">
						<i class="fab fa-github"></i>
						<span
							class="d-none d-print-inline text-black-50 ml-4 position-absolute">https://github.com/roddone</span>
					</a>
					<a href="https://twitter.com/romainOddone" class="d-print-block" aria-label="Twitter"
						title="Twitter">
						<i class="fab fa-twitter"></i>
						<span
							class="d-none d-print-inline text-black-50 ml-4 position-absolute">https://twitter.com/romainOddone</span>
					</a>
				</div>
			</div>
		</section>

		<hr class="m-0">

		<section class="resume-section p-3 p-lg-5 d-flex justify-content-center" id="experience">
			<div class="w-100">
				<h2 class="mb-5">{{navbar.experience}}</h2>

				{{#experience}}
				<div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
					<div class="resume-content">
						<h3 class="mb-0">{{title}}</h3>
						<div class="subheading mb-3">{{company}}</div>
						{{#descriptionParts}}
						<p>
							{{{this}}}
						</p>
						{{/descriptionParts}}
						<p>
							{{#tags}}
							<span class="badge badge-primary">{{this}}</span>
							{{/tags}}
						</p>
					</div>
					<div class="resume-date text-md-right">
						<span class="text-primary">{{timing}}</span>
					</div>
				</div>
				{{/experience}}

			</div>

		</section>

		<hr class="m-0">

		<section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="education">
			<div class="w-100">
				<h2 class="mb-5">{{navbar.education}}</h2>

				{{#education}}
				<div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
					<div class="resume-content">
						<h3 class="mb-0">{{location}}</h3>
						<div class="subheading mb-3">{{label}}</div>
						<div>{{description}}</div>
					</div>
					<div class="resume-date text-md-right">
						<span class="text-primary">{{timing}}</span>
					</div>
				</div>
				{{/education}}
			</div>
		</section>

		<hr class="m-0">

		<section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="skills">
			<div class="w-100">
				<h2 class="mb-5">{{navbar.skills}}</h2>

				<div class="subheading mb-3">{{{skills.languagesAndTools.title}}}</div>
				<ul class="list-inline dev-icons">
					{{#skills.languagesAndTools.items}}
					<li class="list-inline-item">
						<i class="{{icon}}" title="{{title}}"></i>
					</li>
					{{/skills.languagesAndTools.items}}
				</ul>

				<div class="subheading mb-3">{{{skills.concepts.title}}}</div>
				<ul class="fa-ul mb-0">
					{{#skills.concepts.items}}
					<li>
						<i class="fa-li fa fa-check"></i>
						{{{this}}}
					</li>
					<li>
						{{/skills.concepts.items}}
				</ul>
			</div>
		</section>

		<hr class="m-0">

		<section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="interests">
			<div class="w-100">
				<h2 class="mb-5">{{navbar.interests}}</h2>
				{{#interests}}
				<p>{{{this}}}</p>
				{{/interests}}
			</div>
		</section>

		<hr class="m-0">

		<section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="diy">
			<div class="w-100">
				<h2 class="mb-5">{{navbar.diy}}</h2>
				<div class="list-group">
					{{#diy}}
					<a href="{{url}}" target="_blank" rel="noreferrer"
						class="text-decoration-none list-group-item list-group-item-action ">
						<div class="d-flex w-100 justify-content-between">
							<h5 class="mb-1">{{title}}</h5>
						</div>
						<p class="mb-1">{{description}}</p>
						<p class="d-none d-print-block">
							{{url}}
						</p>
						<p>
							{{#tags}}
							<span class="badge badge-primary">{{this}}</span>
							{{/tags}}
						</p>

					</a>
					{{/diy}}
				</div>
			</div>
		</section>

	</div>

	<div id="cookies" class="alert alert-danger alert-dismissible fade show mb-0 w-100 p-3 m-3 d-none d-print-none"
		role="alert">
		<strong>Cookies Alert !</strong> Ce CV utilise des cookies (Google Analytics).
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>

	<script src="bundle.js" async></script>
</body>

</html>